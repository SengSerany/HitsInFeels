<div class="container">

    <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for @list do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Créer une nouvelle liste</h1><br />
        <div class="form-group">
          <%= f.label :title, "Nom de la liste" %><br />
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Créer la liste", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>

</div>