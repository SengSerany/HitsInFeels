<div class="container">

    <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for @content do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Ajouter un nouveau contenu !</h1>
        <div class="form-group">
          <%= f.label :title, "Titre" %><br />
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :link, "Lien YouTube" %>
          <%= f.url_field :link, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :origin, "Extrait tirÃ© de" %><br />
          <%= f.text_field :origin, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Description" %><br />
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Ajouter", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
    
</div>