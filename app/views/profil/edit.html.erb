<div class="container">

    <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for @profil do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Modifier les informations de mon profil</h1>
        <div class="form-group">
          <%= f.label :first_name, "Prénom" %><br />
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :last_name, "Nom" %><br />
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :gender, "Sexe" %>
          <%= f.select (:gender) do %>
            <% [['',''],['Femme', 'Femme'], ['Homme', 'Homme']].each do |c| -%>
            <%= content_tag(:option, c.first, value: c.last) %>
            <% end %>
            <% end %>
        </div>
        <div class="form-group">
          <%= f.label :birthday, "Date de naissance" %><br />
          <%= f.date_field :birthday, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :city, "Ville de résidence" %><br />
          <%= f.text_field :city, class: "form-control" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Modifier mon profil", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>

</div>