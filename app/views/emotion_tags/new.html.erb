<div class="container">

  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for @emotion_tag do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Créer un nouveau tag</h1>
        <br/>
        <div class="form-group">
          <%= f.label :name, "Quelle émotion ?" %><br />
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Ajouter", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
    
</div>